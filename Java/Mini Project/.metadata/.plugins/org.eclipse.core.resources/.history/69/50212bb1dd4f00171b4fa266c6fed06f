package com.mdy.java;

public abstract class Building {
	// 1. 속성 정의
	int 높이;
	String 주소;
	float 위치;
	String 소유자정보;
	double 가격;
	boolean 문 = false;
	
	// 2. 기능 정의
	void opened(){
		if(문 == false){
			문 = true;
		}
	};
	abstract void closed(){
		if(문 == true){
			문 = false;
		}
	};
	
}


abstract class Door {
	public static final int TYPE_REVOLVE = 1;	// 회전 문
	pulbic static final int TYPE_SLIDE = 2;		// 미닫이 문
	public static final int TYPE_HINGED = 3;	// 여닫이 문
	
	int type;
}

abstract class Person {
	abstract void open();
	abstract void close();
}










