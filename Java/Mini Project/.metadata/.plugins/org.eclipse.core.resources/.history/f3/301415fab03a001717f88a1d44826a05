package com.mdy.mybbs.presenter;

import java.util.Scanner;

import com.mdy.mybbs.view.BbsInput;

public class BbsPresenter {
	
	final boolean START = true;
	final boolean FINISH = false;
	
	boolean runFlag = START;
	
	public void start(){
		Scanner scanner = new Scanner(System.in);
		while(runFlag){
			System.out.println("명령어를 입력하세요. [ㅣ:목록, w:쓰기, r:상세보기]");
			String command = scanner.nextLine();
			switch(command){
				case "l":
					
					break;
				case "w":
					BbsInput presenter = new BbsInput();
					input.process(scanner);
					break;
				case "r":
					
					break;
			}
		}
	}
	
	public void end(){
		runFlag = FINISH;
	}
}
